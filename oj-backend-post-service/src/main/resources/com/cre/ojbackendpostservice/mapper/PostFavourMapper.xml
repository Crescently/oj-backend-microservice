<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cre.ojbackendpostservice.mapper.PostFavourMapper">

    <select id="listFavourPostByPage"
            resultType="com.cre.ojbackendmodel.model.entity.Post">
        select p.*
        from post p
                 join (select post_id from post_favour where user_id = #{userId}) pf
                      on p.id = pf.post_id ${ew.customSqlSegment}
    </select>
</mapper>
